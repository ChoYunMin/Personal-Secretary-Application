<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#CCEAC0B9"
    android:padding="10dp">

    <TextView
        android:id="@+id/friend_textView_list_time"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:textSize="30dp" android:textStyle="bold" android:textColor="@color/white"/>

    <TextView
        android:id="@+id/friend_textView_list_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:textSize="20dp" android:textColor="@color/white"/>

</LinearLayout>